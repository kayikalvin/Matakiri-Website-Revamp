# Copy this file to .env and fill in the values

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/matakiri

# JWT settings
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Server
PORT=5000
NODE_ENV=development

# Rate limiting (minutes, max requests)
RATE_LIMIT_WINDOW_MIN=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=20

# Email (used by sendEmail utility) - configure if using password resets
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=yourpassword
FROM_EMAIL="Matakiri <no-reply@matakiritrust.org>"
